<%= simple_form_for @bathroom, method: :get do |f| %>
  <%= f.input :price  %>
    <%= f.label :baby %>

  <%= f.input_field :baby, as: :boolean %>
    <%= f.label :handicapped %>

  <%= f.input_field :handicapped, as: :boolean %>
    <%= f.label :bidet %>

  <%= f.input_field :bidet, as: :boolean %>
      <%= f.label :style %>

  <%= f.select :style, collection: %w(western turkish japanese) %>
      <%= f.submit "submit" %>

<% end %>


