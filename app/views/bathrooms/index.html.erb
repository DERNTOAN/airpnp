              </div>
              <%= cl_image_tag(bathroom.user.photo, class: "card-user") %>

              <%= link_to "" ,bathroom_path(bathroom), class:"card-link" %>
              <!-- </div> -->
              <%= cl_image_tag(bathroom.user.photo, height: 400, width: 400, crop: :fit, class: "card-user") %>
            </div>
          </div>
          <% end %>
