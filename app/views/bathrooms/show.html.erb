<div class="wrapper">

  <div class="container">
    <div class="show-bathroom">

      <div class="bathroom-info">

        <p class = "uptag"><%= @bathroom.style.upcase %> TOILET IN <%= @bathroom.city.upcase %> </p>
        <div class="bathroom-head">

          <div class="main-infos">
            <h1 class="title"><%= @bathroom.title %></h1>
            <p class = "distance">600 m</p>
          </div>

          <div class="avatar-container">
            <%= link_to user_path do   %>
            <%= cl_image_tag @owner.photo, height: 100, width: 100, crop: :fill, class: "avatar-bordered" %>
            <% end %>
          </div>


        </div>

        <div class="bathroom-properties">
          <i class="fas fa-hand-paper"></i>

        </i>  <span><%= @bathroom.toilet_paper %> layers toilet paper</span>

        <span>

          <i class="fab fa-accessible-icon"></i>  <span><%= @bathroom.handicapped ? "accessible" : "not for persons with limited mobility" %></span>
        </span>
        <span>

          <%  if @bathroom.baby %>
          <i class="fas fa-bug"></i> <span>"Babies welcome"</span>
          <% end %>
        </span>

        <span>

          <%  if @bathroom.wipes %>
          <i class="fas fa-bug"></i><span>"Wipes"</span>
          <% end %>
        </span>

        <span>

          <%  if @bathroom.bidet %>
          <i class="fas fa-bug"></i><span>"Bidet"</span>
          <% end %>
        </span>
      </div>

      <div class="bathroom-description">

        <p><%= @bathroom.description %></p>


      </div>


      <%= link_to  "Book this bathroom for #{@bathroom.price.to_f/100}â‚¬",  new_bathroom_booking_path(@bathroom), class: "btn btn-danger btn-lg btn-block" %>
    </div>

    <div class="bathroom-photo">
      <%= cl_image_tag @bathroom.photo, height: 600, width: 800, crop: :fill %>
        <%= link_to "See photos", "#", class: "photos-link btn btn-danger" %>
    </div>

    <div class="bathroom-map">
    </div>

  <%= link_to "Don't like this bathroom? Swipe back", bathrooms_path, class: "btn btn-danger" %>

  </div>
</div>







