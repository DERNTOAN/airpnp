<div class="container">

  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
        <%= simple_form_for [@bathroom, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: 1..5 %>
        <%= f.submit "Add review", class: "btn btn-primary" %>
        <% end %>
    </div>
  </div>
</div>
