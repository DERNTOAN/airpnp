<div class="wrapper">

  <div class="container">
    <div class="booking-grid">

      <div class="booking-info">



        <h1 class="run">Run!</h1>

        <div class="where-info">


          <p>
            <%= @booking.bathroom.address %></p>

          </div>


          <div class="user-info-vt">
            <p>
              Host: <%= @booking.bathroom.user.first_name %> <%= @booking.bathroom.user.last_name %>
            </p>



          </div>

          <div class="text-time">


            <p>
              <strong>
                don't waste your time buddy
              </strong>
            </p>
            <p>
              <em>

                (not like your host would care) :
              </em>
            </p>


          </div>

          <div class="timer">

            <h4 id="booking-timer" data-created=<%= (@booking.created_at.to_f+30*60)*1000 %>></h4>

          </div>

          <div "flush">
            <a href=<%= "#{new_bathroom_review_path}" %> class="btn btn-default flush-button" data-reviewpath=<%= new_bathroom_review_path %>>FLUSH</a>
          </div>

          <div class="countdown-digital">
            <!-- MINUTE -->
            <div class="clock">
              <div class="numbers">
                <p class="minutes">00</p>
                <p class="placeholder">88</p>
              </div>

              <div class="colon">
                <p>:</p>
              </div>

              <!-- SECOND -->
              <div class="numbers">
                <p class="seconds">00</p>
                <p class="placeholder">88</p>
              </div>
            </div>
          </div>

        </div>



        <div class="bathroom-info">
          <p class = "uptag"><%= @booking.bathroom.style.upcase %> TOILET IN <%= @booking.bathroom.city.upcase %> </p>
          <div class="bathroom-head">

            <div class="main-infos">
              <h1 class="title"><%= @booking.bathroom.title %></h1>
              <p class = "distance">600 m</p>
            </div>

          </div>

          <div class="bathroom-properties">
            <i class="fas fa-align-justify"></i>
            <span><%= @bathroom.toilet_paper %>-ply paper</span>
            <span>
              <%  if @bathroom.handicapped %>
              <i class="fab fa-accessible-icon"></i>
              <span>Accessible</span>
              <% end %>
            </span>
            <span>

              <%  if @bathroom.baby %>
              <i class="fas fa-child"></i> <span>Babies welcome</span>
              <% end %>
            </span>

            <span>
              <%  if @bathroom.wipes %>
              <i class="far fa-sticky-note"></i><span>Wipes available</span>
              <% end %>
            </span>

            <span>
              <%  if @bathroom.bidet %>
              <i class="fas fa-bath"></i><span>Bidet available</span>
              <% end %>
            </span>

          </div>

          <div class="bathroom-description">

           <p><%= @booking.bathroom.description %></p>

         </div>
       </div>


     <div
     id="map"
     style="width: 100%; height: 400px;"
     data-markers="<%= @markers.to_json %>"
     data-user_location="<%= @user_location.to_json %>"
     class="bathroom-map"
     >


     </div>
   </div>




